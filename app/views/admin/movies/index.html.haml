.container
  %h1 Search
  = render partial: "admin/movies/form"
  %br/
- if @movies
  .col-xl-6.col-12
  .box-content
    %h4.box-title.text-center Movies
    %table.table.table-striped.margin-bottom-10
      %thead
        %tr
          %th Title
          %th Year
          %th Options
      %tbody
      - @movies.each do |movie|
        %tr
          %td 
            = movie["Title"]
          %td 
            = movie["Year"]
          %td 
            = link_to "Add to DB", new_admin_movie_path(id: movie['imdbID'])
