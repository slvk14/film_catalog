.col-xl-6.col-12
  .box-content
    %h4.box-title.text-center Movies
    - if current_user.admin?
      .btn.btn-danger
        = link_to "Refresh Movies", admin_refresh_path
    %table.table.table-striped.margin-bottom-10
      %thead
        %tr
          %th{:style => "width:40%;"} Title
          %th Year
          %th Country
          %th Options
      %tbody
      - @movies.each do |movie|
        %tr
          %td 
            = movie.title
          %td 
            = movie.year
          %td 
            = movie.country
            
        
            


  